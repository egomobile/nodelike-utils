{
    "name": "@egomobile/nodelike-utils",
    "version": "0.4.1",
    "description": "Library of utilities, which are compatible with any important Node-like environment.",
    "main": "lib/index.cjs.js",
    "module": "lib/index.esm.js",
    "types": "lib/index.d.ts",
    "exports": {
        "require": "./lib/index.cjs.js",
        "import": "./lib/index.esm.js"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "scripts": {
        "build": "del ./lib && rollup -c rollup.config.mjs",
        "docs:generate": "del ./docs && typedoc --out ./docs ./src",
        "lint": "eslint -c .eslintrc.js --ext .ts src",
        "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
        "sandbox": "nodemon --watch './sandbox.ts' --exec node -r ts-node/register --inspect=0.0.0.0:9229 ./sandbox.ts",
        "test": "NODE_ENV=test jest --no-cache"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.ts"
        ],
        "setupFilesAfterEnv": [
            "./src/setupTests.ts"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/egomobile/nodelike-utils.git"
    },
    "keywords": [
        "utils",
        "tools",
        "helpers",
        "javascript",
        "js",
        "browser",
        "node",
        "nodelike",
        "node like",
        "react",
        "vue",
        "ego",
        "frontend",
        "ui",
        "user interface",
        "server",
        "backend"
    ],
    "author": "Next.e.GO Mobile SE, Aachen, Germany",
    "license": "LGPL-3.0",
    "files": [
        "CHANGELOG.md",
        "LICENSE",
        "lib",
        "!lib/**/__tests__/**/*",
        "!lib/**/*.map",
        "!lib/**/setupTests.*",
        "README.md"
    ],
    "dependencies": {
        "@egomobile/js-utils": "^0.5.1"
    },
    "devDependencies": {
        "@egomobile/tsconfig": "^5.0.0",
        "@rollup/plugin-commonjs": "24.0.1",
        "@rollup/plugin-node-resolve": "15.0.1",
        "@rollup/plugin-typescript": "11.0.0",
        "@types/jest": "29.4.0",
        "@types/node": "16.18.13",
        "babel-jest": "29.5.0",
        "del-cli": "5.0.0",
        "eslint": "8.35.0",
        "eslint-config-ego": "^0.17.1",
        "jest": "29.5.0",
        "nodemon": "2.0.21",
        "rollup": "3.18.0",
        "ts-jest": "29.0.5",
        "ts-node": "10.9.1",
        "typedoc": "0.23.26",
        "typescript": "4.6.4"
    }
}